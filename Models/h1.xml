-->
    <specular>
      <red-prop>specular/red</red-prop>
      <green-prop>specular/green</green-prop>
      <blue-prop>specular/blue</blue-prop>
    </specular>

    <emission>
      <red-prop>emission/red</red-prop>
      <green-prop>emission/green</green-prop>
      <blue-prop>emission/blue</blue-prop>
    </emission>
<!--
    <shininess>
      <shininess-prop>shininess</shininess-prop>
    </shininess>
-->
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>verriere</object-name>
    <object-name>canopytrans</object-name>
    <object-name>propblur</object-name>
    <object-name>propdisc</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>verriere</object-name>
    <object-name>canopytrans</object-name>
  </animation>

<!--
    <object-name>ailes</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>voletG</object-name>
    <object-name>voletD</object-name>
-->
  <effect>
    <inherits-from>Aircraft/H1-Racer/Models/Effects/H1reflect</inherits-from>
    <object-name>fuselage</object-name>
    <object-name>capot</object-name>
    <object-name>profondeur</object-name>
    <object-name>derive</object-name>
    <object-name>ailes2</object-name>
    <object-name>direction</object-name>
    <object-name>canopy</object-name>
  </effect>

  <!-- Une ombre pour OSG -->
  <model>
    <name>shadowOSG</name>
    <path>Aircraft/H1-Racer/Models/shadow.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>shadowOSG</object-name>
    <condition>
      <equals>
        <property>sim[0]/rendering/shadows-ai</property>
        <value>true</value>
      </equals>
    </condition>
  </animation>

  <!-- Immatriculation -->
  <model>
    <path>Aircraft/H1-Racer/Models/Immat/immat.xml</path>
    <offsets>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </offsets>
  </model>

  <!-- Interieur -->
  <model>
    <path>Aircraft/H1-Racer/Models/Interior/interior.xml</path>
    <offsets>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </offsets>
  </model>

  <!-- L'hélice --> 
  <animation>
    <name>HeliceComplete</name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
    <object-name>helice</object-name>
    <object-name>bol</object-name>
  </animation>

  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc</object-name>
    <condition>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur</object-name>
    <condition>
    <and>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>600.000</value>
      </greater-than>
      <less-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500.001</value>
      </less-than>
    </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>helice</object-name>
    <condition>
      <less-than>
        <property>engines/engine[0]/rpm</property>
	<value>1500</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>HeliceComplete</object-name>
    <property>engines/engine[0]/rpm</property>
    <factor> -1 </factor>
    <center>
      <x-m> -3.713 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.059 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Gouverne de profondeur -->
  <animation>
    <type>rotate</type>
    <object-name>profondeur</object-name>
    <property>/controls/flight/elevator</property>
    <factor>11</factor>
    <center>
      <x-m> 3.397 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.205 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>direction</object-name>
    <property>/controls/flight/rudder</property>
    <factor>20</factor>
    <center>
      <x-m> 3.133 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 1.031 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

  <!-- Animations des ailerons -->
  <animation>
    <type>rotate</type>
    <object-name>aileronG</object-name>
    <property>/surface-positions/left-aileron-pos-norm</property>
    <factor>-15.0</factor>
    <axis>
      <x1-m> -0.811 </x1-m>
      <y1-m> -2.629 </y1-m>
      <z1-m> -0.015 </z1-m>
      <x2-m> -1.024 </x2-m>
      <y2-m> -4.415 </y2-m>
      <z2-m>  0.185 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>aileronD</object-name>
    <property>/surface-positions/right-aileron-pos-norm</property>
    <factor>15.0</factor>
    <axis>
      <x1-m> -0.811 </x1-m>
      <y1-m>  2.629 </y1-m>
      <z1-m> -0.015 </z1-m>
      <x2-m> -1.024 </x2-m>
      <y2-m>  4.415 </y2-m>
      <z2-m>  0.185 </z2-m>
    </axis>
  </animation>

  <!-- Animation des volets -->
  <animation>
    <type>rotate</type>
    <object-name>voletG</object-name>
    <property>surface-positions/flap-pos-norm</property>
    <factor>-30.0</factor>
    <axis>
      <x1-m> -0.619 </x1-m>
      <y1-m> -0.875 </y1-m>
      <z1-m> -0.276 </z1-m>
      <x2-m> -0.797 </x2-m>
      <y2-m> -2.282 </y2-m>
      <z2-m> -0.066 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>voletD</object-name>
    <property>surface-positions/flap-pos-norm</property>
    <factor>-30.0</factor>
    <axis>
      <x1-m> -0.797 </x1-m>
      <y1-m>  2.282 </y1-m>
      <z1-m> -0.066 </z1-m>
      <x2-m> -0.619 </x2-m>
      <y2-m>  0.875 </y2-m>
      <z2-m> -0.276 </z2-m>
    </axis>
  </animation>

  <!-- Rentré des roues -->
  <animation>
    <type>rotate</type>
    <object-name>roueG</object-name>
    <property>gear/gear[0]/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep> 85 </dep></entry>
      <entry><ind> 1 </ind><dep>  0 </dep></entry>
    </interpolation>
    <center>
      <x-m> -1.851 </x-m>
      <y-m> -1.652 </y-m>
      <z-m> -0.207 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <name>PorteGauche</name>
    <object-name>porte1G</object-name>
    <object-name>porte2G</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>PorteGauche</object-name>
    <property>gear/gear[0]/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep> 85 </dep></entry>
      <entry><ind> 1 </ind><dep>  0 </dep></entry>
    </interpolation>
    <center>
      <x-m> -1.838 </x-m>
      <y-m> -1.683 </y-m>
      <z-m> -0.236 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>porte2G</object-name>
    <property>gear/gear[0]/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>   0 </dep></entry>
      <entry><ind> 1 </ind><dep> -85 </dep></entry>
    </interpolation>
    <axis>
      <x1-m> -2.349 </x1-m>
      <y1-m> -1.720 </y1-m>
      <z1-m> -1.591 </z1-m>
      <x2-m> -2.017 </x2-m>
      <y2-m> -1.786 </y2-m>
      <z2-m> -1.680 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>roueD</object-name>
    <property>gear/gear[1]/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep> -85 </dep></entry>
      <entry><ind> 1 </ind><dep>   0 </dep></entry>
    </interpolation>
    <center>
      <x-m> -1.851 </x-m>
      <y-m>  1.652 </y-m>
      <z-m> -0.207 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <name>PorteDroite</name>
    <object-name>porte1D</object-name>
    <object-name>porte2D</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>PorteDroite</object-name>
    <property>gear/gear[1]/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep> -85 </dep></entry>
      <entry><ind> 1 </ind><dep>   0 </dep></entry>
    </interpolation>
    <center>
      <x-m> -1.838 </x-m>
      <y-m>  1.683 </y-m>
      <z-m> -0.236 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>porte2D</object-name>
    <property>gear/gear[1]/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>  0 </dep></entry>
      <entry><ind> 1 </ind><dep> 85 </dep></entry>
    </interpolation>
    <axis>
      <x1-m> -2.349 </x1-m>
      <y1-m>  1.720 </y1-m>
      <z1-m> -1.591 </z1-m>
      <x2-m> -2.017 </x2-m>
      <y2-m>  1.786 </y2-m>
      <z2-m> -1.680 </z2-m>
    </axis>
  </animation>

  <!-- Rotation des roues lors du roulage -->
  <animation>
    <type>spin</type>
    <object-name>roueG</object-name>
    <property>gear/gear[0]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -2.255 </x-m>
      <y-m> -1.504 </y-m>
      <z-m> -1.606 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueD</object-name>
    <property>gear/gear[1]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -2.255 </x-m>
      <y-m>  1.504 </y-m>
      <z-m> -1.606 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <name>FullCanopy</name>
    <object-name>canopy</object-name>
    <object-name>canopytrans</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>FullCanopy</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> 175 </factor>
    <center>
      <x-m> 0.268503 </x-m>
      <y-m> 0.391754 </y-m>
      <z-m> 0.290637 </z-m>
    </center>
    <axis>
      <x> -0.587979 </x>
      <y>  0.033809 </y>
      <z>  3.5e-05  </z>
    </axis>
  </animation>

  <!-- Ajout des effets lumineux -->
  <model>
    <path>Aircraft/H1-Racer/Models/light/beacon.xml</path>
    <offsets>
      <x-m> 2.997 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 1.719 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/H1-Racer/Models/light/RedLight.xml</path>
    <offsets>
      <x-m> -1.580 </x-m>
      <y-m> -4.747 </y-m>
      <z-m>  0.223 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/H1-Racer/Models/light/GreenLight.xml</path>
    <offsets>
      <x-m> -1.580 </x-m>
      <y-m>  4.747 </y-m>
      <z-m>  0.223 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/H1-Racer/Models/light/StrobeWhite.xml</path>
    <offsets>
      <x-m> -1.590 </x-m>
      <y-m> -4.747 </y-m>
      <z-m>  0.223 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/H1-Racer/Models/light/StrobeWhite.xml</path>
    <offsets>
      <x-m> -1.590 </x-m>
      <y-m>  4.747 </y-m>
      <z-m>  0.223 </z-m>
    </offsets>
  </model>

</PropertyList>

